                  <Image url="@../Assets/user.png" />
               </image>
            </ImageView>
            <Label fx:id="username_comment" minWidth="-Infinity" text="Username" textFill="#2f7eeb" translateX="5.0" translateY="-15.0" underline="true">
               <font>
                  <Font name="Consolas" size="15.0" />
               </font>
            </Label>
            <Label fx:id="comment_text" prefWidth="364.0" style="-fx-background-color: rgba(78, 78, 78, 0.8); -fx-background-radius: 5px;" text="Comment text" textAlignment="JUSTIFY" textFill="WHITE" translateX="-60.0" translateY="10.0" wrapText="true">
               <font>
                  <Font name="Consolas" size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
