<AnchorPane id="AnchorPane" prefWidth="309.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="publication.gui.Item_CommentController">
    <stylesheets>
        <URL value="@item_comment.css" />
    </stylesheets>
   <children>
